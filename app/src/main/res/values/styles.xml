<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/bentley_dark_blue</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/bentley_light_blue</item>
    </style>

    <style name="DefaultStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/bentley_light_blue</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#000000</item>
    </style>

    <style name="ContactListHeading">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:background">@color/bentley_dark_blue</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContactListItem">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/bentley_dark_blue</item>
        <item name="android:background">@color/pale_yellow</item>
        <item name="android:padding">4dp</item>
    </style>

</resources>
